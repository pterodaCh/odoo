<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <record id="module_category_certification" model="ir.module.category">
            <field name="name">Certification</field>
            <field name="description">Helps you manage your certification process.</field>
            <field name="sequence">1</field>
        </record>

        <record id="group_certification_performer" model="res.groups">
            <field name="name">Performers</field>
            <field name="category_id" ref="iot_certification.module_category_certification"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="comment">the user will be able to fill out an application and send it to the manager for
                processing.
            </field>
        </record>

        <record id="group_certification_report_manager" model="res.groups">
            <field name="name">Reports Managers</field>
            <field name="category_id" ref="iot_certification.module_category_certification"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="comment">the user will be able to review and confirm reports.</field>
        </record>

        <record id="group_certification_cert_manager" model="res.groups">
            <field name="name">Certificates Managers</field>
            <field name="category_id" ref="iot_certification.module_category_certification"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="comment">the user will be able to review and confirm certificates.</field>
        </record>

        <record id="performer_own_form_rule" model="ir.rule">
            <field name="name">Performer: view onw records</field>
            <field name="model_id" ref="model_iot_certification_order"/>
            <field name="groups" eval="[Command.set([ref('iot_certification.group_certification_performer')])]"/>
            <field name="domain_force">[('create_uid','=', user.id)]</field>
        </record>

        <record id="manager_own_form_rule" model="ir.rule">
            <field name="name">Manager: view onw records</field>
            <field name="model_id" ref="model_iot_certification_order"/>
            <field name="groups" eval="[Command.set([ref('iot_certification.group_certification_report_manager')])]"/>
            <field name="domain_force">[]</field>
        </record>
    </data>
</odoo>